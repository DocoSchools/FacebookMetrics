            }
        });

        // Audience Demographics Chart
        const audienceDemographicsCtx = document.getElementById('audienceDemographicsChart').getContext('2d');
        const audienceDemographicsChart = new Chart(audienceDemographicsCtx, {
            type: 'bar',
