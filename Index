        // Generate Users' Activity Heatmap
        const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
        const hours = ['12am', '3am', '6am', '9am', '12pm', '3pm', '6pm', '9pm'];
        
        const heatmapData = [
            [0, 0, 0, 1, 1, 1, 0],  // 12am
            [0, 0, 0, 0, 2, 0, 3],  // 3am
            [0, 0, 0, 1, 2, 2, 3],  // 6am
            [1, 0, 1, 1, 2, 0, 3],  // 9am
            [0, 1, 0, 3, 0, 0, 0],  // 12pm
            [1, 1, 0, 1, 0, 2, 3],  // 3pm
            [0, 1, 1, 1, 2, 0, 3],  // 6pm
            [1, 1, 1, 1, 0, 5, 0]   // 9pm
        ];
        
        const heatmapContainer = document.getElementById('heatmap');
        
        // Add day headers
        const headerRow = document.createElement('div');
        headerRow.className = 'heatmap-row';
        
        // Add empty cell for the corner
        const cornerCell = document.createElement('div');
        cornerCell.className = 'heatmap-cell';
        cornerCell.style.opacity = '0';
        headerRow.appendChild(cornerCell);
        
        days.forEach(day => {
            const dayCell = document.createElement('div');
            dayCell.className = 'heatmap-cell';
            dayCell.textContent = day.substring(0, 3);
            dayCell.style.textAlign = 'center';
            dayCell.style.fontWeight = 'bold';
            headerRow.appendChild(dayCell);
        });
        
        heatmapContainer.appendChild(headerRow);
        
        // Generate heatmap data
        hours.forEach((hour, hourIndex) => {
            const row = document.createElement('div');
            row.className = 'heatmap-row';
            
            // Add hour label
            const hourCell = document.createElement('div');
            hourCell.className = 'heatmap-cell';
            hourCell.textContent = hour;
            hourCell.style.textAlign = 'right';
            hourCell.style.paddingRight = '10px';
            hourCell.style.fontWeight = 'bold';
            row.appendChild(hourCell);
            
            // Add data cells
            days.forEach((day, dayIndex) => {
                const cell = document.createElement('div');
                cell.className = 'heatmap-cell heat-' + heatmapData[hourIndex][dayIndex];
                
                // Add value if it's not 0
                if (heatmapData[hourIndex][dayIndex] > 0) {
                    const valueSpan = document.createElement('div');
                    valueSpan.className = 'heatmap-value';
                    valueSpan.textContent = (hourIndex === 7 && dayIndex === 5) ? '25' : '';
                    cell.appendChild(valueSpan);
                }
                
                row.appendChild(cell);
            });
            
            heatmapContainer.appendChild(row);
        });
        
        // Generate Best Day and Time to Publish Heatmap
        const publishHeatmapData = [
            [0, 0, 0, 0, 0, 0, 0],  // 12am
            [0, 0, 0, 0, 0, 0, 0],  // 3am
            [0, 0, 0, 1, 0, 2, 0],  // 6am
            [0, 0, 0, 4, 0, 3, 0],  // 9am
            [0, 1, 0, 5, 0, 0, 0],  // 12pm
            [0, 1, 0, 0, 0, 0, 3],  // 3pm
            [0, 1, 1, 0, 0, 0, 0],  // 6pm
            [0, 0, 0, 0, 0, 0, 0]   // 9pm
        ];
        
        const publishHeatmapContainer = document.getElementById('publishHeatmap');
        
        // Add day headers
        const publishHeaderRow = document.createElement('div');
        publishHeaderRow.className = 'heatmap-row';
        
        // Add empty cell for the corner
        const publishCornerCell = document.createElement('div');
        publishCornerCell.className = 'heatmap-cell';
        publishCornerCell.style.opacity = '0';
        publishHeaderRow.appendChild(publishCornerCell);
        
        days.forEach(day => {
            const dayCell = document.createElement('div');
            dayCell.className = 'heatmap-cell';
            dayCell.textContent = day.substring(0, 3);
            dayCell.style.textAlign = 'center';
            dayCell.style.fontWeight = 'bold';
            publishHeaderRow.appendChild(dayCell);
        });
        
        publishHeatmapContainer.appendChild(publishHeaderRow);
        
        // Generate publish heatmap data
        hours.forEach((hour, hourIndex) => {
            const row = document.createElement('div');
            row.className = 'heatmap-row';
            
            // Add hour label
            const hourCell = document.createElement('div');
            hourCell.className = 'heatmap-cell';
            hourCell.textContent = hour;
            hourCell.style.textAlign = 'right';
            hourCell.style.paddingRight = '10px';
            hourCell.style.fontWeight = 'bold';
            row.appendChild(hourCell);
            
            // Add data cells
            days.forEach((day, dayIndex) => {
                const cell = document.createElement('div');
                cell.className = 'heatmap-cell heat-' + publishHeatmapData[hourIndex][dayIndex];
                
                // Add value if it's special
                if (hourIndex === 3 && dayIndex === 3) {
                    const valueSpan = document.createElement('div');
                    valueSpan.className = 'heatmap-value';
                    valueSpan.textContent = '3.6K';
                    cell.appendChild(valueSpan);
                }
                
                row.appendChild(cell);
            });
            
            publishHeatmapContainer.appendChild(row);
        });
    </script>
