                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Post Type Chart
        const postTypeCtx = document.getElementById('postTypeChart').getContext('2d');
        const postTypeChart = new Chart(postTypeCtx, {
            type: 'doughnut',
            data: {
                labels: ['Photos', 'Videos', 'Reels', 'Links'],
